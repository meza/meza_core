{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>stateshifters/renovate-common"],
  "packageRules": [
    {
      "matchPackageNames": [
        "gg.meza.stonecraft"
      ],
      "stabilityDays": 0
    },
    {
      "matchManagers": ["gradle"],
      "semanticCommitType": "deps",
      "automerge": true
    },
    {
      "matchDatasources": [ "gradle-version" ],
      "addLabels": ["dev dependencies"],
      "automerge": true,
      "semanticCommitType": "deps",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchDatasources": [ "gradle-version" ],
      "addLabels": ["dev dependencies"],
      "automerge": false,
      "semanticCommitType": "deps",
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
